<Page x:Class="Фасхиева_ПР12.AddUpdateHotel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фасхиева_ПР12"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="800"
      Title="AddUpdateHotel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Добавление отеля" Style="{StaticResource Header}"/>

        <StackPanel Grid.Row="1">
            <GroupBox Header="Наименование отеля">
                <TextBox Name="tbNameHotel"/>
            </GroupBox>
            <GroupBox Header="Количество звезд">
                <TextBox Name="tbCountStars"/>
            </GroupBox>
            <GroupBox Header="Описание">
                <TextBox Name="tbDescription"/>
            </GroupBox>
            <GroupBox Header="Выберите страну">
                <ComboBox Name="cbCountry"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>
